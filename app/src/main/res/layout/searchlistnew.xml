<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F3"
   >
    <RelativeLayout

        android:id="@+id/topbg"
        android:visibility="gone"
        android:background="@drawable/top_bg02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout

            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:weightSum="12"
                >
                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dropdown01"
                    android:paddingLeft="3dp"
                    android:hint="City"
                    android:layout_weight="3.5"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:textSize="16.5dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@android:color/black"
                    android:textColorHint="#999999">


                </Spinner>

                <RelativeLayout
                    android:background="@drawable/small_edittext"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="7"
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content">




                    <AutoCompleteTextView

                        android:id="@+id/autoCompleteTextView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:paddingLeft="3dp"
                        android:hint="Service"
                        android:imeOptions="actionDone"
                        android:layout_centerVertical="true"
                        android:inputType="text"
                        android:textSize="16.5dp"
                        android:layout_marginRight="23dp"
                        android:completionThreshold="1"
                        android:textColor="@android:color/black"
                        android:textColorHint="#999999"
                        android:ems="10" >
                    </AutoCompleteTextView>
                    <ImageView
                        android:id="@+id/dropdown"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/dropdown_icon"
                        android:layout_width="25dp"
                        android:padding="2dp"

                        android:layout_marginRight="5dp"
                        android:layout_height="25dp" />
                </RelativeLayout>
                <ImageButton
                    android:id="@+id/search"
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"

                    android:background="@drawable/search_btn" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/topbg"
        android:id="@+id/upr_lin"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="#FFFFFF"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:padding="10dp"
            android:textColor="#000"
            android:background="@drawable/sort"

            />

        <TextView
            android:id="@+id/trusted"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
         android:textColor="#000"
            android:background="@color/transparent"
            android:text="Trusted"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical"
            android:paddingLeft="-10dp"
            android:src="@drawable/icon_arrow" />

        <TextView
            android:id="@+id/rating_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:textColor="#000"

            android:background="@color/transparent"
            android:text=" Rating"/>

    </LinearLayout>
    <ListView
        android:background="#F3F3F3"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/upr_lin"
        android:scrollbars="none"
        android:id="@+id/listview"
        android:divider="@null"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
       />


</RelativeLayout>
