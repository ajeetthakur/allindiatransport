<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginBottom="10dp"
        android:id="@+id/topbg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">
        <ScrollView
            android:scrollbars="none"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_weight="2"
                    android:background="@android:color/transparent"
                    android:text="Company Name"
                    android:textColor="@color/colorAccent"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_weight="2"
                    android:background="@android:color/transparent"
                    android:inputType="textCapWords"
                    android:text=""
                    android:textColor="@color/colorAccent"
                    android:textSize="12dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_weight="12"
                >
                <TextView
                    android:id="@+id/edit_companyname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/small_edittext"
                    android:hint="Company Name"
                    android:layout_weight="5"
                    android:paddingLeft="5dp"
                    android:gravity="center_vertical"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:textSize="16.5dp"
                    android:layout_marginRight="3dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="#999999">


                </TextView>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_weight="2"
                    android:background="@android:color/transparent"
                    android:inputType="textCapWords"
                    android:text="Contact Person"
                    android:textColor="@color/colorAccent"
                    android:textSize="12dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_weight="12"
                >

                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/edit_contactperson"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/small_edittext"
                    android:paddingLeft="5dp"
                    android:hint="Contact Person"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="5"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:textSize="16.5dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="#999999">


                </TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_weight="2"
                    android:background="@android:color/transparent"
                    android:text="Mobile No"
                    android:textColor="@color/colorAccent"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_weight="2"
                    android:background="@android:color/transparent"
                    android:inputType="textCapWords"
                    android:text=""
                    android:textColor="@color/colorAccent"
                    android:textSize="12dp" />
            </LinearLayout>
            <TextView
                android:id="@+id/edit_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/big_edittext"
                android:paddingLeft="5dp"
                android:hint="Mobile No"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="14dp"
                android:gravity="center_vertical"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:textSize="16.5dp"
                android:textColor="@android:color/black"
                android:textColorHint="#999999">


            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_weight="2"
                    android:background="@android:color/transparent"
                    android:text="Contact No"
                    android:textColor="@color/colorAccent"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_weight="2"
                    android:background="@android:color/transparent"
                    android:inputType="textCapWords"
                    android:text="Contact Person"
                    android:textColor="@color/colorAccent"
                    android:textSize="12dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:layout_weight="12"
                >
                <TextView
                    android:id="@+id/edit_contactno"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/small_edittext"
                    android:paddingLeft="5dp"
                    android:hint="Need Vehicle"
                    android:layout_weight="5"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:textSize="16.5dp"
                    android:layout_marginRight="3dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="#999999">


                </TextView>
                <TextView
                    android:id="@+id/edit_needvehicle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/small_edittext"
                    android:paddingLeft="5dp"
                    android:hint="Need Vehicle"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="5"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:textSize="16.5dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="#999999">


                </TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_weight="2"
                    android:background="@android:color/transparent"
                    android:text="From State"
                    android:textColor="@color/colorAccent"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_weight="2"
                    android:background="@android:color/transparent"
                    android:inputType="textCapWords"
                    android:text="From City"
                    android:textColor="@color/colorAccent"
                    android:textSize="12dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_weight="10"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtfrom_state"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:layout_weight="5"
                    android:background="@drawable/dropdown"
                    android:gravity="center_vertical"
                    android:text="From State"

                    android:textColor="@android:color/black"
                    android:textColorHint="#999999"
                    android:textSize="16.5dp">


                </TextView>


                <TextView
                    android:id="@+id/txtfrom_city"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="5dp"
                    android:layout_weight="5"
                    android:background="@drawable/dropdown"
                    android:gravity="center_vertical"
                    android:text="From City"
                    android:paddingLeft="5dp"
                    android:paddingRight="10dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="#999999"
                    android:textSize="16.5dp">


                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_weight="2"
                    android:background="@android:color/transparent"
                    android:text="To State"
                    android:textColor="@color/colorAccent"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_weight="2"
                    android:background="@android:color/transparent"
                    android:inputType="textCapWords"
                    android:text="To City"
                    android:textColor="@color/colorAccent"
                    android:textSize="12dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_weight="10"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txtto_state"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:background="@drawable/dropdown"
                    android:gravity="center_vertical"
                    android:text="To State"
                    android:inputType="text"
                    android:paddingLeft="5dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="#999999"
                    android:textSize="16.5dp">
                </TextView>
                <TextView
                    android:id="@+id/txtto_city"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="5"
                    android:background="@drawable/dropdown"
                    android:gravity="center_vertical"
                    android:text="To City"
                    android:paddingLeft="5dp"
                    android:paddingRight="10dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="#999999"
                    android:textSize="16.5dp">
                </TextView>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_weight="2"
                    android:background="@android:color/transparent"
                    android:text="Email"
                    android:textColor="@color/colorAccent"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_weight="2"
                    android:background="@android:color/transparent"
                    android:inputType="textCapWords"
                    android:text=""
                    android:textColor="@color/colorAccent"
                    android:textSize="12dp" />
            </LinearLayout>
            <TextView
                android:id="@+id/edit_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/big_edittext"
                android:paddingLeft="5dp"
                android:hint="Email"
                android:visibility="gone"

                android:layout_marginLeft="3dp"
                android:layout_marginTop="14dp"

                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:textSize="16.5dp"
                android:textColor="@android:color/black"
                android:textColorHint="#999999">


            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_weight="2"
                    android:background="@android:color/transparent"
                    android:text="Need vehicle"
                    android:textColor="@color/colorAccent"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_weight="2"
                    android:background="@android:color/transparent"
                    android:inputType="textCapWords"
                    android:text="Freight"
                    android:textColor="@color/colorAccent"
                    android:textSize="12dp" />
            </LinearLayout>
            <TextView
                android:id="@+id/text_brokerservice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/dropdown"
                android:gravity="center_vertical"
                android:hint="Need vehicle"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:textColorHint="#999999"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_weight="2"
                    android:background="@android:color/transparent"
                    android:inputType="textCapWords"
                    android:text="Freight"
                    android:textColor="@color/colorAccent"
                    android:textSize="12dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_weight="12"
                >

                <TextView
                    android:id="@+id/edit_Freight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/small_edittext"
                    android:paddingLeft="5dp"
                    android:hint="Freight"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="5"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal"
                    android:textSize="16.5dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="#999999">


                </TextView>

            </LinearLayout>
            <TextView
                android:id="@+id/edit_goodsdetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/big_edittext"
                android:paddingLeft="5dp"
                android:hint="Goods Details"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="14dp"
android:visibility="gone"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:textSize="16.5dp"
                android:textColor="@android:color/black"
                android:textColorHint="#999999">


            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_weight="2"
                    android:background="@android:color/transparent"
                    android:text="Description"
                    android:textColor="@color/colorAccent"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_weight="2"
                    android:background="@android:color/transparent"
                    android:inputType="textCapWords"
                    android:text=""
                    android:textColor="@color/colorAccent"
                    android:textSize="12dp" />
            </LinearLayout>
            <TextView
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:id="@+id/txtDesc"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/corner_btn"
                android:gravity="left|top"
                android:padding="10dp"
                android:hint="Enter Description"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLines="4"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:textSize="15dp"
                android:textColor="@android:color/black"
                android:textColorHint="#999999">
            </TextView>


        </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</RelativeLayout>
