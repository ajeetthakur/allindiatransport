<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   android:background="@color/transparent"

    >
    <RelativeLayout
        android:background="@drawable/corner_btn"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <LinearLayout

        android:id="@+id/main_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:visibility="gone"
            android:id="@+id/company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="Company_Name"
            android:textColor="#333333"
            android:textSize="16.5dp" />

<LinearLayout
    android:weightSum="10"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_weight="5"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/text_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"

            android:drawableLeft="@drawable/phone"
            android:text="number"
            android:textColor="#999999"
            android:textSize="12dp" />




        <TextView
            android:id="@+id/text_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/mail"
            android:text="mail"
            android:drawablePadding="10dp"
            android:maxLines="2"
            android:textColor="#999999"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/text_website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/website"
            android:text="website"
             android:visibility="gone"
            android:maxLines="2"
            android:textColor="#999999"
            android:textSize="12dp" />


    </LinearLayout>

    <RelativeLayout
        android:layout_weight="5"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/delete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/close"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="10dp"
            android:textColor="@color/colorAccent" />

    </RelativeLayout>


</LinearLayout>





        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Need Vehicle:"

            android:textColor="#000"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/good_details"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Need Vehicle"

            android:textColor="#999999"
            android:textSize="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Freight Rate"

            android:textColor="#000"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/need_vehicle"


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Need Vehicle"

            android:textColor="#999999"
            android:textSize="12dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Discription:"

            android:textColor="#000"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/discription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Need Vehicle"

            android:textColor="#999999"
            android:textSize="12dp" />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/from"
                android:text="From "
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/to"
                android:layout_marginLeft="5dp"
                android:text="To"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
</RelativeLayout>
</RelativeLayout>
