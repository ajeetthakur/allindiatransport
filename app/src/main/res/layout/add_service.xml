<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout

        android:id="@+id/topbg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent">

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginBottom="20dp"

            android:orientation="vertical">
            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Service"
                android:textColor="#FFF"
                android:textSize="25dp" />
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"

                android:background="@drawable/corner_btnredborder">

                <TextView
                    android:id="@+id/textservices"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/dropdown"
                    android:gravity="center_vertical"
                    android:hint="Service"
                    android:padding="10dp"
                    android:textColorHint="#999999"></TextView>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/lin_city_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_weight="10"
                android:visibility="gone"
                android:background="@color/colorAccent"
                android:orientation="vertical">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_weight="10"
                    android:visibility="visible"
                    android:background="@color/colorAccent"
                    android:orientation="horizontal">


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"

                        android:background="@drawable/corner_btnredborder">

                        <TextView
                            android:id="@+id/txtFrom_state"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"


                            android:background="@drawable/dropdown02"
                            android:gravity="center_vertical"
                            android:paddingLeft="5dp"
                            android:text="State"
                            android:textColor="@android:color/black"
                            android:textColorHint="#999999"
                            android:textSize="16.5dp">


                        </TextView>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"

                        android:layout_weight="5"
                        android:background="@drawable/corner_btnredborder">

                        <TextView
                            android:id="@+id/txtFrom_city"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"


                            android:background="@drawable/dropdown02"
                            android:gravity="center_vertical"
                            android:paddingLeft="5dp"


                            android:text="Cities"
                            android:textColor="@android:color/black"
                            android:textColorHint="#999999"
                            android:textSize="16.5dp">


                        </TextView>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_weight="10"
                    android:visibility="visible"
                    android:background="@color/colorAccent"
                    android:orientation="horizontal">


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"

                    android:background="@drawable/corner_btnredborder">

                    <TextView
                        android:id="@+id/txtto_state"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/dropdown02"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:text="To State"
                        android:textColor="@android:color/black"
                        android:textColorHint="#999999"
                        android:textSize="16.5dp">


                    </TextView>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="5"
                    android:background="@drawable/corner_btnredborder">

                    <TextView
                        android:id="@+id/txtto_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"


                        android:background="@drawable/dropdown02"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"


                        android:text="To Cities"
                        android:textColor="@android:color/black"
                        android:textColorHint="#999999"
                        android:textSize="16.5dp">


                    </TextView>
                </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:visibility="gone"
                android:id="@+id/citytextshow"
                android:text="Selected City "
                android:textColor="@android:color/white"
                android:textColorHint="#999999"
                android:textSize="16.5dp"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="SAVE"
                android:padding="10dp"
                android:textColor="#FFF"
                android:gravity="center"
                android:background="@drawable/corner_btnredbordernew" />


            <TextView

                android:id="@+id/viewlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="View Saved Service"
                android:padding="10dp"
                android:textColor="#FFF"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/corner_btnredbordernew" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
