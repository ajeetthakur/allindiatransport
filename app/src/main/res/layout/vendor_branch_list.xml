<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="#FFF"
   >
    <RelativeLayout
        android:id="@+id/rel_main"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"

        android:background="@drawable/corner_btnredborder">

        <TextView
            android:id="@+id/text_branch_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/dropdown"
            android:gravity="center_vertical"
            android:hint="Select Branch"
            android:padding="10dp"
            android:textColorHint="#999999"></TextView>
    </RelativeLayout>
    <ListView
        android:layout_above="@+id/save"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/rel_main"
        android:scrollbars="none"
        android:id="@+id/listview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
       />

    <TextView
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:id="@+id/save"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_margin="10dp"
android:layout_centerHorizontal="true"
        android:background="@drawable/corner_btnredbranchtext"
        android:gravity="center"
        android:padding="10dp"
        android:text="Save"
        android:textColor="@color/colorAccent" />
</RelativeLayout>
