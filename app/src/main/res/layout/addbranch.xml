<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/topbg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#fff">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:scrollbars="none">


            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">


<HorizontalScrollView
    android:scrollbars="none"
    android:layout_gravity="right"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/show_service"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_gravity="center_vertical"
                        android:drawablePadding="5dp"
                        android:background="@drawable/corner_btnredbranchtext"

                        android:gravity="center"
                        android:padding="7dp"
                        android:text="Show Service"
                        android:textSize="9dp"
                        android:visibility="gone"
                        android:textColor="#d31f0f" />

                <TextView
                    android:layout_toRightOf="@+id/show_service"
                    android:id="@+id/edit_keyword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center_vertical"
                    android:drawablePadding="2dp"
                    android:drawableLeft="@drawable/plus"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Keyword"
                    android:textSize="10dp"
                    android:visibility="gone"
                    android:textColor="#d31f0f" />

                <TextView
                    android:layout_toRightOf="@+id/edit_keyword"
                    android:id="@+id/edit_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="2dp"
                    android:drawableLeft="@drawable/plus"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:padding="10dp"
                    android:textSize="10dp"
                    android:text="Service"
                    android:visibility="gone"
                    android:textColor="#d31f0f" />
                    <TextView
                        android:layout_toRightOf="@+id/edit_service"
                        android:id="@+id/edit"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/corner_btnredbranchtext"
                        android:drawableLeft="@drawable/edit"
                        android:gravity="center"
                        android:padding="7dp"
                        android:text="Edit"
                        android:textSize="14sp"
                        android:visibility="gone"
                        android:textColor="#d31f0f" />
                </LinearLayout>
</HorizontalScrollView>
                <TextView

                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Add Branch"
                    android:textColor="#333333"
                    android:textSize="25dp"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="14dp"
                    android:background="@android:color/transparent"
                    android:inputType="textCapWords"
                    android:text="Branch Name"
                    android:textColor="@color/colorAccent"
                    android:textSize="12dp" />


                <EditText
                    android:id="@+id/edit_branch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/big_edittext"
                    android:drawableLeft="@drawable/member_type"
                    android:drawablePadding="5dp"
                    android:hint="Branch Name"
                    android:imeOptions="actionNext"
                    android:digits="0123456789*,qwertzuiopasdfghjklyxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM "
                    android:inputType="text"
                    android:paddingLeft="5dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="#999999"
                    android:textSize="16.5dp">


                </EditText>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_weight="2"
                        android:background="@android:color/transparent"
                        android:inputType="textCapWords"
                        android:text="Contact Person"
                        android:textColor="@color/colorAccent"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="@android:color/transparent"
                        android:inputType="textCapWords"
                        android:text=""
                        android:textColor="@color/colorAccent"
                        android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="12"

                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edit_contactperson"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:layout_weight="5"
                        android:background="@drawable/small_edittext"
                        android:drawableLeft="@drawable/member_type"
                        android:drawablePadding="5dp"
                        android:hint="Contact Person"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:paddingLeft="5dp"
                        android:textColor="@android:color/black"
                        android:textColorHint="#999999"
                        android:textSize="16.5dp">


                    </EditText>



                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/transparent"
                    android:text="Mobile"
                    android:textColor="@color/colorAccent"
                    android:textSize="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/txtmobile"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"

                                android:background="@drawable/corner_btn"
                                android:drawableLeft="@drawable/mobile_number"
                                android:drawablePadding="10dp"
                                android:hint="Mobile no."
                                android:padding="10dp"
                                android:imeOptions="actionNext"
                                android:inputType="phone"
                                android:maxLength="16"
                                android:paddingTop="10dp"
                                android:singleLine="true"
                                android:textColor="@android:color/black"
                                android:textColorHint="#999999"
                                android:textSize="15dp">


                            </EditText>
                            <ListView
                                android:id="@+id/list1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"></ListView>


                        </LinearLayout>


                    </RelativeLayout>


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"

                    android:background="@android:color/transparent"
                    android:text="Phone"
                    android:textColor="@color/colorAccent"
                    android:textSize="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <EditText
                                android:id="@+id/txtphone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"

                                android:background="@drawable/corner_btn"
                                android:drawableLeft="@drawable/mobile_number"
                                android:drawablePadding="10dp"
                                android:padding="10dp"
                                android:hint="Mobile no."
                                android:imeOptions="actionNext"
                                android:inputType="phone"
                                android:maxLength="16"
                                android:paddingTop="10dp"
                                android:singleLine="true"
                                android:textColor="@android:color/black"
                                android:textColorHint="#999999"
                                android:textSize="15dp">


                            </EditText>
                            <ListView
                                android:id="@+id/listphone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"></ListView>


                        </LinearLayout>




                    </RelativeLayout>


                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_weight="2"
                        android:background="@android:color/transparent"
                        android:inputType="textCapWords"
                        android:text="State"
                        android:textColor="@color/colorAccent"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="@android:color/transparent"
                        android:inputType="textCapWords"
                        android:text="City"
                        android:textColor="@color/colorAccent"
                        android:textSize="12dp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_weight="10"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtstate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:background="@drawable/dropdown"
                        android:drawableLeft="@drawable/address"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:text="State"
                        android:textColor="@android:color/black"
                        android:textColorHint="#999999"
                        android:textSize="16.5dp">


                    </TextView>


                    <TextView
                        android:id="@+id/txtcity"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="5dp"
                        android:layout_weight="5"
                        android:background="@drawable/dropdown"
                        android:drawableLeft="@drawable/address"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:paddingRight="10dp"
                        android:text="City"
                        android:textColor="@android:color/black"
                        android:textColorHint="#999999"
                        android:textSize="16.5dp">


                    </TextView>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="14dp"
                    android:background="@android:color/transparent"
                    android:inputType="textCapWords"
                    android:text="Address"
                    android:textColor="@color/colorAccent"
                    android:textSize="12dp" />


                <EditText
                    android:id="@+id/text_address"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/corner_btn"
                    android:gravity="left|top"
                    android:hint="Address"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:maxLines="4"
                    android:padding="10dp"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textColorHint="#999999"
                    android:textSize="15dp">


                </EditText>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_weight="2"
                        android:background="@android:color/transparent"
                        android:inputType="textCapWords"
                        android:text="PinCode"
                        android:textColor="@color/colorAccent"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="@android:color/transparent"
                        android:inputType="textCapWords"
                        android:text=""
                        android:textColor="@color/colorAccent"
                        android:textSize="12dp" />
                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="12"

                android:orientation="horizontal">
                <EditText
                    android:id="@+id/edit_pincode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:layout_weight="5"
                    android:background="@drawable/small_edittext"
                    android:drawableLeft="@drawable/address"
                    android:drawablePadding="5dp"
                    android:hint="Pincode"
                    android:imeOptions="actionNext"
                    android:inputType="phone"
                    android:paddingLeft="5dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="#999999"
                    android:textSize="16.5dp">


                </EditText>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="2"
                        android:background="@android:color/transparent"
                        android:inputType="textCapWords"
                        android:text="Email"
                        android:textColor="@color/colorAccent"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:layout_marginLeft="5dp"
                        android:background="@android:color/transparent"
                        android:inputType="textCapWords"
                        android:text="Website"
                        android:textColor="@color/colorAccent"
                        android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="12"

                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/edit_emailid"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="5"
                        android:background="@drawable/small_edittext"
                        android:drawableLeft="@drawable/email"
                        android:drawablePadding="5dp"
                        android:hint="Email ID"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:paddingLeft="5dp"
                        android:textColor="@android:color/black"
                        android:textColorHint="#999999"
                        android:textSize="16.5dp">


                    </EditText>



                    <EditText
                        android:id="@+id/edit_website"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="5"
                        android:background="@drawable/small_edittext"
                        android:drawableLeft="@drawable/website"
                        android:drawablePadding="5dp"
                        android:hint="Website"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:paddingLeft="5dp"
                        android:textColor="@android:color/black"
                        android:textColorHint="#999999"
                        android:textSize="16.5dp">


                    </EditText>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="14dp"
                    android:background="@android:color/transparent"
                    android:inputType="textCapWords"
                    android:text="Description"
                    android:textColor="@color/colorAccent"
                    android:textSize="12dp" />


                <EditText
                    android:background="@drawable/corner_btn"
                    android:overScrollMode="always"
                    android:scrollbarStyle="insideInset"
                    android:scrollbars="vertical"
                    android:id="@+id/txtDesc"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:padding="10dp"
                    android:hint="Description"
                    android:maxLines="5"
                    android:inputType="textMultiLine"
                    android:layout_gravity="center_vertical"
                    android:textColor="@android:color/black"
                    android:textColorHint="#999999"
                    android:textSize="15dp">


                </EditText>

                <TextView
                    android:id="@+id/save"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"

                    android:background="@drawable/corner_btnredbranchtext"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Save/Continue"
                    android:textColor="@color/colorAccent" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</RelativeLayout>
