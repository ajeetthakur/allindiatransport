<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >
<RelativeLayout
    android:id="@+id/topbg"
    android:visibility="gone"
    android:background="@drawable/top_bg02"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout

android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"

    android:weightSum="12"
    >
        <Spinner
            android:id="@+id/spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/dropdown01"
            android:paddingLeft="3dp"
            android:hint="City"
            android:layout_weight="3.5"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:textSize="16.5dp"
            android:layout_gravity="center_vertical"
            android:textColor="@android:color/black"
            android:textColorHint="#999999">


        </Spinner>

<RelativeLayout
    android:background="@drawable/small_edittext"
    android:layout_marginLeft="5dp"
    android:layout_weight="7"
    android:layout_width="0dp"
    android:layout_gravity="center_vertical"
    android:layout_height="wrap_content">




    <AutoCompleteTextView

        android:id="@+id/autoCompleteTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:paddingLeft="3dp"
        android:hint="Service"
        android:imeOptions="actionDone"
        android:layout_centerVertical="true"
        android:inputType="text"
        android:textSize="16.5dp"
        android:layout_marginRight="23dp"
        android:completionThreshold="1"
        android:textColor="@android:color/black"
        android:textColorHint="#999999"
        android:ems="10" >
    </AutoCompleteTextView>
    <ImageView
        android:id="@+id/dropdown"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/dropdown_icon"
        android:layout_width="25dp"
        android:padding="2dp"

        android:layout_marginRight="5dp"
        android:layout_height="25dp" />
</RelativeLayout>
    <ImageButton
        android:id="@+id/search"
        android:layout_width="0dp"
        android:layout_weight="1.5"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"
       android:layout_marginLeft="5dp"

        android:background="@drawable/search_btn" />
</LinearLayout>


    </LinearLayout>
</RelativeLayout>
    <ScrollView
        android:layout_below="@+id/topbg"
        android:layout_width="match_parent"
        android:layout_marginBottom="15dp"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <RelativeLayout
            android:visibility="gone"
            android:layout_marginRight="15dp"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <ToggleButton
                android:textSize="12dp"
                android:textOff="Notifications Off"
                android:textOn="Notifications On"
                android:id="@+id/noti_toggle"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                />

        </RelativeLayout>

        <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/transportal_directory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/transportal_directory"/>
        <ImageView
            android:id="@+id/broker_directory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/broker_directory"/>
    </LinearLayout>




        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/parcel_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/parcel_service"/>
            <ImageView
                android:id="@+id/distance_calculator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/distance_calculator"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/post_goods"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/post_goods"/>
            <ImageView
                android:id="@+id/post_vehicle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/post_vehicles"/>
        </LinearLayout>

    </LinearLayout>
    </ScrollView>
</RelativeLayout>
