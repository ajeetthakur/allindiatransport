<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F3F3F3">

    <RelativeLayout
        android:fillViewport="true"
        android:id="@+id/toolbar"
        android:background="?attr/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="60dp">
<ImageView
    android:id="@+id/back"
    android:padding="4dp"
    android:layout_centerVertical="true"
    android:src="@drawable/ic_arrow_white"
    android:layout_width="40dp"
    android:layout_height="40dp" />

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/back"
            android:text="Broker Search Details"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"

            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

<ScrollView
    android:fillViewport="true"
    android:layout_below="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="#F3F3F3"
        android:id="@+id/main_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/topbg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/top_bg02">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:weightSum="12">

                    <Spinner
                        android:id="@+id/spinner"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3.5"
                        android:background="@drawable/dropdown01"
                        android:hint="City"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:paddingLeft="3dp"
                        android:textColor="@android:color/black"
                        android:textColorHint="#999999"
                        android:textSize="16.5dp">


                    </Spinner>


                    <AutoCompleteTextView
                        android:id="@+id/autoCompleteTextView1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="7"
                        android:background="@drawable/dropdown01"
                        android:completionThreshold="1"
                        android:ems="10"
                        android:hint="Service"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:paddingLeft="3dp"
                        android:paddingRight="10dp"
                        android:textColor="@android:color/black"
                        android:textColorHint="#999999"
                        android:textSize="16.5dp"></AutoCompleteTextView>

                    <ImageButton
                        android:id="@+id/search"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1.5"
                        android:background="@drawable/search_btn" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:background="#F3F3F3"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#333333"
                android:textStyle="bold"
                android:textSize="16.5dp" />
        </LinearLayout>
        <ListView
            android:id="@+id/listview_rate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/main_line" />

    </LinearLayout>
</ScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:layout_alignParentRight="true"
        android:layout_margin="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/search_icon"
        />

</RelativeLayout>

