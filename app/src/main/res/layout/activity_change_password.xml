<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_change_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <LinearLayout
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="15dp"
            android:background="@android:color/transparent"

            android:text="Old Password"
            android:textColor="@color/colorAccent"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/ch_et_oldPass"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corner_btn"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:hint="Old Password"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:singleLine="true"
            android:textSize="15dp"
            android:textColor="@android:color/black"
            android:textColorHint="#999999">

        </EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="15dp"
            android:background="@android:color/transparent"

            android:text="New Password"
            android:textColor="@color/colorAccent"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/ch_et_newPass"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corner_btn"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:hint="New Password"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:singleLine="true"
            android:textSize="15dp"
            android:textColor="@android:color/black"
            android:textColorHint="#999999">

        </EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="15dp"
            android:background="@android:color/transparent"

            android:text="Confirm Password"
            android:textColor="@color/colorAccent"
            android:textSize="12dp" />
        <EditText
            android:id="@+id/ch_et_confPass"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corner_btn"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:hint="Confirm Password"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:singleLine="true"
            android:textSize="15dp"
            android:textColor="@android:color/black"
            android:textColorHint="#999999">

        </EditText>
        <TextView
            android:id="@+id/ch_tv_update"
            android:background="@drawable/corner_btnredborder"
            android:text="Update"
            android:textSize="16dp"
            android:layout_marginTop="15dp"
            android:textColor="#d31f0f"
            android:gravity="center"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



    </LinearLayout>

</RelativeLayout>
