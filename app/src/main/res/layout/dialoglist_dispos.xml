<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:background="@drawable/corner_btnredborder"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textupr"
            android:layout_margin="10dp"
            android:textSize="16dp"
            android:textColor="#d31f0f"
            android:text="Why are you Delete this Vehicle?"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



    <ListView
        android:listSelector="@drawable/listbgselect"
        android:layout_margin="10dp"
        android:layout_marginTop="15dp"
        android:id="@+id/completeList"
        android:layout_width="match_parent"
        android:divider="@android:color/transparent"
        android:dividerHeight="10.0sp"
        android:layout_height="150dp"
        android:layout_marginBottom="10dp"></ListView>

        <TextView
            android:layout_margin="10dp"
            android:text="Note"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <EditText
        android:layout_margin="10dp"
        android:layout_below="@+id/completeList"
        android:id="@+id/note"
        android:inputType="text"
        android:maxLines="2"
        android:hint="Note"
        android:padding="10dp"
        android:background="@drawable/corner_btn"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_below="@+id/completeList"
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="12"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="5dp"
            android:layout_weight="5"
            android:background="@drawable/corner_btnredborder"
            android:gravity="center"
            android:padding="10dp"
            android:text="Delete"
            android:textColor="#d31f0f" />

        <TextView
            android:id="@+id/declineButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:layout_weight="5"
            android:background="@drawable/corner_btnredborder"
            android:gravity="center"
            android:padding="10dp"
            android:text="Back"
            android:textColor="#d31f0f" />
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>
